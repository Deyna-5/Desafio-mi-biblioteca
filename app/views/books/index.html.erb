<h1 class=" text-center my-5">Lista de libros</h1>

<div class=mb-4>
  <h4>Buscar libros por estado</h4>
    <%= search_form_for @q do |f| %>
      <%= f.select :status_eq, options_for_select(@busqueda), {class: 'form-control'}%>
      <%= f.submit %>
    <%end%>
</div>

<table class="table table-striped table-dark mb-5">
      <thead>       
              <tr>
                    <th scope="col">Titulo</th>
                    <th scope="col">Autor</th>
                    <th scope="col">Status</th>
                    <th scope="col">Fecha de prestamo</th>
                    <th scope="col">Fecha de devoluci√≥n</th>
              </tr>
      </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.status %></td>
        <td><%= book.borrowed_at %></td>
        <td><%= book.returned_at %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

